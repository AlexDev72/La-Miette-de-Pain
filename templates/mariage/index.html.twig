{% set evenement_liste = path('evenement_liste', {'id' : mariages[0]}) %}
{% extends 'base.html.twig' %}
{% block title %}Mariages/Baptêmes!{% endblock %}

{% block body %}
    <div class="evenement">
        <h3>Baptêmes/Mariages</h3>
        <section >
            <figure class="deco">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {%  for mariage in mariages %}
                        <div class="carousel-item active">
                            <img width=20% src="/upload/images/Slider/mariage/{{ mariage.image }}">
                        </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </figure>

            <p class="texte">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Libero,
                fugiat consequatur? <br> Nesciunt nisi odit neque illo magnam facilis odio libero eos sequi,
                quo animi,<br> tenetur, asperiores similique perspiciatis expedita dolore!
            </p>

        </section>

    </div>
{% endblock %}
